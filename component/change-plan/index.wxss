.change-plan {
  padding: 20px;
  padding-bottom: 100px;
}

.plan-title {
  display: flex;
  flex-flow: row nowrap;
  border-bottom: 1px rgb(221, 219, 219) solid;
}

.title-column1, .title-column2 {
  flex-grow: 1;
  text-align: center;
  padding: 20px;
  color: rgb(75, 175, 221);
}

.finish-day {
  padding: 20px;
  color: rgb(126, 124, 124);
}

.plan-picker {
  background-color: white;
}

.picker-active {
  color: rgb(91, 157, 233);
  font-size: 20px;
  font-weight: 00;
}

