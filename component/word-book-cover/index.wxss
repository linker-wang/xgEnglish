/* component/word-book-cover/index.wxss */
.word-book-cover {
  height: 80px;
  padding: 0 20px;
  background-color: white;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}

.word-book-name {
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  font-size: 18px;
  font-weight: 600;
  color: rgb(144, 194, 235);
}
.word-count {
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  font-size: 12px;
  color: rgb(144, 194, 235);
}