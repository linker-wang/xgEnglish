/* base_ui/tab-page/index.wxss */
.tab-page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column nowrap;
}

.tab-bar {
  display: flex;
  flex-flow: row nowrap;
}

.back-icon {
  padding: 10px;
}

.right-icon {
  padding: 10px;
  width: 20px;
}

.titles {
  flex-grow: 1;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
}

.title-item {
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  margin: 0 10px;
}

.contents {
  flex-grow: 1;
}